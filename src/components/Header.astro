---
const { class: className, ...rest } = Astro.props;
---

<header class={className} {...rest}>
  <div class="logo"><img src="/logo.png" alt="" /></div>
  <div class="contacts">
    <div class="number">+7(926)9669169</div>
    <div class="email">SIF@APT-IT.PRO</div>
  </div>
</header>

<style lang="scss" scoped>
  header {
    background-color: #101010;

    width: 100%;
    height: 154px;
    display: flex;
    justify-content: space-between;
    align-items: center;

    padding: 0 138px;
  }

  .logo {
    width: 154px;
    height: 154px;
  }

  .contacts {
    width: 280px;

    display: flex;
    flex-direction: column;
    gap: 5px;

    .number {
      align-self: flex-start;
      color: rgb(255, 255, 255);
      font-family: var(--second-family);
      font-size: 30px;
      font-weight: 700;
      line-height: 55px;
      letter-spacing: 0%;
      text-align: right;
    }

    .email {
      align-self: flex-end;

      background: linear-gradient(
        138.65deg,
        rgb(0, 155, 141),
        rgb(28, 126, 107),
        rgb(74, 185, 163)
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-fill-color: transparent;
      font-family: var(--second-family);
      font-size: 18px;
      font-weight: 600;
      line-height: 24px;
      letter-spacing: 0%;
      text-align: right;
    }

  }

  @media (max-width: 1440px) {
    header {
      padding: 0 100px;
    }
    .contacts {
      flex-wrap: wrap;
      align-content: center;
    }
  }

  @media (max-width: 600px) {
    header { 
      padding: 0 20px;
      margin: 0;
      height: 75px;
    }

    .logo {
      width: 65px;
      height: 65px;
      
      img {
        width: 65px;
        height: 65px;
      }
    }

    .contacts {
      flex-wrap: wrap;
      align-content: flex-end;

      .number {
        font-size: 18px;
        font-weight: 100;
        line-height: 20px;
      }

      .email {
        font-size: 12px;
        font-weight: 200;
      }
    }
  }
</style>
