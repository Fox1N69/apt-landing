---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header/Header.astro";
import Activities from "@components/Activities/Activities.astro";
import About from "@components/About/About.astro";
import Principles from "@components/Principles/Principles.astro";
---

<Layout title="ООО'Альянс перспективных технологи'">
	<main>
		<Header />
		<section id="banner">
			<div class="banner__content">
				<h1 class="title">Компания <br /> «Альянс перспективных технологий»</h1>
				<p class="description">
					объединила под своим началом настоящих профессионалов в своей области.
					Команда специалистов занимается автоматизацией бизнес-процессов за
					счет внедрения в повседневную работу современных инновационных
					решений. Удачно подобранный кадровый состав позволяет решать проблемы
					различного уровня сложности, среди них самая главная – делать сложные
					и непонятные вещи максимально понятными и доступными на интуитивном
					уровне.
				</p>
			</div>
		</section>
		<Activities />
		<About />
		<Principles />
	</main>
</Layout>

<style lang="scss">
	main {
		max-width: 100%;
		background-color: #101010;
	}

	#banner {
		height: 659px;
		width: 100%;
		background-image: url("/banner-fhd.png");
		background-size: cover;

		padding: 120px 0 127px 113px;
	}

	.banner__content {
		max-width: 1075.2px;
		height: 198px;

		color: white;
		display: flex;
		flex-direction: column;
		gap: 22px;

		.title {
			background: linear-gradient(
				138.65deg,
				rgb(0, 155, 141),
				rgb(28, 126, 107),
				rgb(74, 185, 163)
			);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
			text-fill-color: transparent;
			font-family: "Graphik";
			font-size: 60px;
			line-height: 66px;
			letter-spacing: 0%;
			text-align: left;
		}

		.description {
			color: rgb(255, 255, 255);
			font-family: "ProximaNova";
			font-size: 22px;
			font-weight: 400;
			line-height: 32px;
			letter-spacing: 0%;
			text-align: left;
		}
	}
</style>
